{
  "net_name": "ARCII",
  "global":{
      "model_type": "PY",
      "weights_file": "./models/arcii.wikiqa.weights",
      "num_epochs": 100,
      "num_batch": 10,
      "optimizer": "adam",
      "learning_rate": 0.0001
  },
  "inputs": {
    "share": {
        "text1_corpus": "../data/WikiQA/corpus_preprocessed.txt",
        "text2_corpus": "../data/WikiQA/corpus_preprocessed.txt",
        "use_dpool": true,
        "fill_word": 27900,
        "embed_size": 50,
        "embed_file": "./data/WikiQA/embed_glove_d50_norm",
        "vocab_size": 27901,
        "train_embed": false,
        "text1_maxlen": 10,
        "text2_maxlen": 20
    },
    "train": {
        "input_type": "PairGenerator", 
        "phase": "TRAIN",
        "use_iter": false,
        "query_per_iter": 50,
        "batch_per_iter": 5,
        "batch_size": 100,
        "relation_file": "../data/WikiQA/relation_train.txt"
    },
    "valid": {
        "input_type": "ListGenerator", 
        "phase": "EVAL",
        "batch_list": 10,
        "relation_file": "../data/WikiQA/relation_train.txt"
    },
    "test": {
        "input_type": "ListGenerator", 
        "phase": "EVAL",
        "batch_list": 10,
        "relation_file": "../data/WikiQA/relation_test.txt"
    },
    "predict": {
        "input_type": "ListGenerator", 
        "phase": "PREDICT",
        "batch_list": 10,
        "relation_file": "../data/WikiQA/relation_test.txt"
    }
  },
  "outputs": {
    "predict": {
      "save_format": "TREC",
      "save_path": "predict.test.wikiqa.txt"
    }
  },
  "model": {
    "model_path": "./models/",
    "model_py": "arcii.ARCII",
    "setting": {
        "1d_kernel_count": 50,
        "1d_kernel_size": 3,
        "num_conv2d_layers": 2,
        "2d_kernel_counts": [16, 16],
        "2d_kernel_sizes": [3, 3],
        "2d_mpool_sizes": [[3, 3], [3, 3]],
        "dropout_rate": 0.3
    }
  },
  "losses": [ 
    {
       "object_name": "rank_hinge_loss",
       "object_params": {
            "margin": 1.0
       }
    }
  ],
  "metrics": [ "ndcg@3", "ndcg@5", "map" ]
}

